[Unit]
Description=Vyud AI Streamlit App
After=network.target

[Service]
# Run as dedicated user for security (create with: sudo useradd -r -s /bin/false vyud)
User=vyud
Group=vyud
WorkingDirectory=/var/www/vyud_app
ExecStart=/var/www/vyud_app/venv/bin/streamlit run app.py --server.port 8501 --server.headless true
Restart=always
RestartSec=5
EnvironmentFile=/var/www/vyud_app/.env

[Install]
WantedBy=multi-user.target
